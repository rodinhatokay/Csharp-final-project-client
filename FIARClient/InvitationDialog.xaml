<Window x:Class="FIARClient.InvitationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIARClient"
        mc:Ignorable="d"
        Title="Invitation to a game" Height="200" Width="350" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Name="Label" VerticalAlignment="Center" FontSize="20" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnAcc" Content="Accept Invitation" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="15" Width="120" Click="btnAcc_Click"/>
        <Button x:Name="btnDecline" Content="Decline Invitation" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center"  Margin="15" Width="120" Click="btnDecline_Click" />
    </Grid>
</Window>
