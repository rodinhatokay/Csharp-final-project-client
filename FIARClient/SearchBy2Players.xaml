<Window x:Class="FIARClient.SearchBy2Players"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIARClient"
        mc:Ignorable="d"
         Title="Sreach games by two Players" Height="298.516" Width="492.75" ResizeMode="NoResize" Initialized="Window_Initialized" >
    <Grid Margin="10" Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalContentAlignment="Right">First player:</Label>
        <Label Grid.Row="1" HorizontalContentAlignment="Right">Second player:</Label>
        <ComboBox Margin="5" Name="cbFirstActors" Grid.Row="0" Grid.Column="1" SelectionChanged="cbFirstActors_SelectionChanged"/>
        <ComboBox Margin="24,10,10,83" Name="cbSecondActors" SelectionChanged="cbSecondActors_SelectionChanged" Grid.RowSpan="2"/>
        <Button Margin="5" Grid.Row="2" Grid.Column="1" Width="70" Content="Search"
                Click="Button_Click"/>
    </Grid>
</Window>
